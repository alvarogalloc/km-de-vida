<%- include('partial/header', { currentPage: 'home', title: 'Kilometros de Vida' }) %>

    <header class="headersOfPages text-center my-4">
      <h1>Kil√≥metros de Vida</h1>
      <div class="quote">Ning√∫n plato desperdiciado. Ning√∫na persona olvidada.</div>
    </header>

    <!--Slideshow with images, dif background colors, and stats-->
    <div
      id="carouselExampleIndicators"
      class="carousel slide carousel-fade"
      data-ride="carousel"
    >
      <ol class="carousel-indicators">
        <li
          data-target="#carouselExampleIndicators"
          data-slide-to="0"
          class="active"
        ></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            class="d-block w-100"
            src="images/foodWaste3.jpg"
            alt="First slide"
          />
          <div class="carousel-caption d-none d-md-block">
            <h5>In GDL there is up to a 25% waste across the whole food production chain</h5>
            <p>That means that a quarter of all the food that we produce never even reaches people's plates</p>
          </div>
        </div>
        <div class="carousel-item">
          <img
            class="d-block w-100"
            src="images/foodWaste2.jpeg"
            alt="Second slide"
          />
          <div class="carousel-caption d-none d-md-block">
            <h5>
              Households are the main source of food waste in Mexico
            </h5>
            <p>This is caused by inadequate meal planning, lack of awareness about date labels, improper storage, etc.</p>
          </div>
        </div>
        <div class="carousel-item">
          <img
            class="d-block w-100"
            src="images/foodWaste.jpg"
            alt="Third slide"
          />
          <div class="carousel-caption d-none d-md-block">
            <h5>Enough food is produced in Guadalajara to feed its entire population</h5>
            <p>The problem lies in the lack of distribution</p>
          </div>
        </div>
      </div>
      <a
        class="carousel-control-prev"
        href="#carouselExampleIndicators"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#carouselExampleIndicators"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>


  
<main class="container mb-5 mt-4">

  <!-- üßç‚Äç‚ôÄÔ∏è Drivers Table -->
  <section class="mb-5">
    <h2 class="text-center mb-3">Volunteer Drivers</h2>
    <div class="table-responsive shadow-sm rounded-lg">
      <table class="table table-striped table-hover align-middle">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Availability</th>
          </tr>
        </thead>
        <tbody>
          <% if (locals.drivers && drivers.length > 0) { %>
            <% drivers.forEach(driver => { %>
              <tr>
                <td><%= driver.volunteerName %></td>
                <td><%= driver.volunteerEmail %></td>
                <td><%= driver.volunteerPhone %></td>
                <td><%= driver.availability %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="4" class="text-center text-muted">No drivers available yet.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>

  <!-- üçû Food Givers Table -->
  <section>
    <h2 class="text-center mb-3">Food Donors</h2>
    <div class="table-responsive shadow-sm rounded-lg">
      <table class="table table-striped table-hover align-middle">
        <thead class="thead-dark">
          <tr>
            <th>Organization</th>
            <th>Contact Person</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Food Type</th>
            <th>Pickup Time</th>
            <th>Created At</th>
          </tr>
        </thead>
        <tbody>
          <% if (locals.givers && givers.length > 0) { %>
            <% givers.forEach(giver => { %>
              <tr>
                <td><%= giver.orgName %></td>
                <td><%= giver.contactPerson %></td>
                <td><%= giver.donorEmail %></td>
                <td><%= giver.donorPhone %></td>
                <td><%= giver.foodType %></td>
                <td><%= giver.pickupTime %></td>
                <td><%= new Date(giver.createdAt).toLocaleString('es-MX') %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="7" class="text-center text-muted">No food donors available yet.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>

</main>

