
      <form action="/join/giver" method="post">
      <h2 class="mb-4">Donate Surplus Food</h2>
        <div class="form-group mb-3">
          <label for="orgName">Restaurant/Hotel Name</label>
          <input
            type="text"
            class="form-control"
            id="orgName"
            name="orgName"
            placeholder="Enter your business name"
            required
          />
        </div>

        <div class="form-group mb-3">
          <label for="contactPerson">Contact Person</label>
          <input
            type="text"
            class="form-control"
            id="contactPerson"
            name="contactPerson"
            placeholder="Enter contact person's name"
            required
          />
        </div>

        <div class="form-group mb-3">
          <label for="donorEmail">Email Address</label>
          <input
            type="email"
            class="form-control"
            id="donorEmail"
            name="donorEmail"
            placeholder="Enter your email"
            required
          />
        </div>

        <div class="form-group mb-3">
          <label for="donorPhone">Phone Number</label>
          <input
            type="tel"
            class="form-control"
            id="donorPhone"
            name="donorPhone"
            placeholder="Enter your phone number"
            required
          />
        </div>

        <div class="form-group mb-3">
          <label for="foodType">Type of Food Surplus</label>
          <textarea
            class="form-control"
            id="foodType"
            name="foodType"
            rows="3"
            placeholder="E.g., bread, fruits, packaged meals..."
            required
          ></textarea>
        </div>

        <div class="form-group mb-3">
          <label for="pickupTime">Preferred Pickup Time</label>
          <input
            type="text"
            class="form-control"
            id="pickupTime"
            name="pickupTime"
            placeholder="E.g., after 8 PM, mornings, flexible..."
            required
          />
        </div>

        <button type="submit" class="btn bg-vanilla">Offer Donation</button>
      </form>
