    <!-- Client-side JavaScript to handle form submission and show toast -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('contactForm');
            const toastElement = document.getElementById('successToast');
            let successToast;

            // Initialize the Bootstrap Toast component only if it exists
            if (toastElement) {
                successToast = new bootstrap.Toast(toastElement);
            }

            form.addEventListener('submit', function(event) {
                event.preventDefault(); // Stop the form from trying to navigate

                // Basic validation check (Bootstrap handles required inputs, but we prevent submission)
                if (form.checkValidity() === false) {
                    event.stopPropagation();
                    return;
                }

                // In a real application, you would send the data to a server here.
                console.log('Form Submitted!');

                // Show the success notification
                if (successToast) {
                    successToast.show();
                }

                // Clear the form fields after successful 'submission'
                form.reset();
            });
        });
